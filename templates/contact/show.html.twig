{% extends 'base.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>EmailFrom</th>
                <td>{{ email.emailFrom }}</td>
            </tr>
            <tr>
                <th>EmailTo</th>
                <td>{{ email.emailTo }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ email.subject }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ email.body }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ email.createdAt ? email.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>App</th>
                <td>{{ email.app }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ email.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ email.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ email.phone }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ email.ip }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{{ email.extra ? email.extra|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Send</th>
                <td>{{ email.send ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': email.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
